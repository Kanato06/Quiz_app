<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "devise-form" }) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "ログイン情報を記憶する" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "submit-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" do |resource_name| %>
  <% if controller_name != 'sessions' %>
    <%= link_to "ログイン", new_session_path(resource_name) %><br />
  <% end %>
  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規登録", new_registration_path(resource_name) %><br />
  <% end %>
<% end %>
